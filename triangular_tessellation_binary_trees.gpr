with "config/triangular_tessellation_binary_trees_config.gpr";
project Triangular_Tessellation_Binary_Trees is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Triangular_Tessellation_Binary_Trees_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("triangular_tessellation_binary_trees.adb");

   package Compiler is
      for Default_Switches ("Ada") use Triangular_Tessellation_Binary_Trees_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Triangular_Tessellation_Binary_Trees;
